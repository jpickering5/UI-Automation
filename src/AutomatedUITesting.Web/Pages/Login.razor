@page "/login"
@inject NavigationManager _navigationManager

<h3>Login</h3>

<div class="container">
    <div class="col-md-6 offset-md-3 mt-5">
        <div class="card">
            <h4 class="card-header">Login</h4>
            <div class="card-body">
                <EditForm Model="@loginModel" OnValidSubmit="OnValidSubmit">
                    <div class="form-group">
                        <span id="error-message">@errorMessage</span>
                    </div>
                    <div class="form-group">
                        <label>Username</label>
                        <InputText @bind-Value="loginModel.Username" id="username-input" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <InputText @bind-Value="loginModel.Password" id="password-input" type="password" class="form-control"/>
                    </div>
                    <button class="btn btn-primary">Login</button>
                    <a href="/register" class="btn btn-link">Register</a>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private Models.Login loginModel = new();
    private string errorMessage = string.Empty;

    private void OnValidSubmit()
    {
        errorMessage = string.Empty;

        if (!loginModel.Username.Equals("nick.chapsas@gmail.com", StringComparison.OrdinalIgnoreCase) || !loginModel.Password.Equals("1111"))
        {
            errorMessage = "Wrong username or password";
            return;
        }

        _navigationManager.NavigateTo("/logged-in");
    }

}
